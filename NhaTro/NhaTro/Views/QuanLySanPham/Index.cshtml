@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<NhaTro.Models.BaiDang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Thêm mới", "ThemMoi")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().QuanHuyen.TenQH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TinhTP.TenTTP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TieuDe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Gia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().AnhBia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Moi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.QuanHuyen.TenQH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TinhTP.TenTTP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TieuDe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gia)
        </td>
        <td>
            <div><img src="@Url.Content("~/AnhBaiDang/"+item.AnhBia)" width="130" height="98" class="img_left" alt="" border="0" /></div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Moi)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { id=item.MaTin }) |
            @Html.ActionLink("Chi tiết", "ChiTiet", new { id=item.MaTin }) |
            @Html.ActionLink("Xóa", "Xoa", new { id=item.MaTin })
        </td>
    </tr>
}

</table>
<div class="trang">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
</div>
<div class="pagination">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .pagination li {
        display: inline;
    }
</style>

